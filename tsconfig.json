{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "ESNext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["vite/client", "vite-plugin-svgr/client"],
    // "types": ["vite/client", "vite-plugin-svgr/client", "@testing-library/jest-dom"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": [
    "src/**/*",
    "__tests__/**/*",
    ".storybook/**/*",
    "./eslintrc.cjs",
    "./jest.config.ts",
    "./setupTests.ts",
    "./vite.config.ts",
    "ui_tests/**/*"
  ]
}
